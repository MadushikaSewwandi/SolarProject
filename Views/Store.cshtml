@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Store>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

<!-- BREADCRUMB -->
	

		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- ASIDE -->
					<div id="aside" class="col-md-3">
						<!-- aside Widget -->
						<div class="aside">
							
							

								

							
							
						</div>
						<!-- /aside Widget -->

						<!-- aside Widget -->
						<div class="aside">
							
							
							
						</div>
						<!-- /aside Widget -->

						<!-- aside Widget -->
						<div class="aside">
							
							
								
								
							
							
						</div>
						<!-- /aside Widget -->

                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Top selling</h3>
                        @{
                            var selections = Umbraco.ContentAtRoot().FirstOrDefault()
                                .ChildrenOfType("product")
                                .Where(x => x.IsVisible() 
                                    && x.HasValue("productType") && x.Value<string>("productType").Equals("solarpanel", StringComparison.OrdinalIgnoreCase)
                                    && x.HasValue("catagorie") && x.Value<string>("catagorie").Equals("topselling", StringComparison.OrdinalIgnoreCase))
                                .OrderByDescending(x => x.CreateDate);
                        }
                        @foreach (var item in selections)
                        {
                            var thumbnail = item.Value<IPublishedContent>("thumbnailImage");
                            <div class="product-widget">
                                 <a href="@item.Url()">
                                <div class="product-img">
                                    <img src="@thumbnail.Url()" alt="">
                                </div>
                                <div class="product-body">
                                    <p class="product-category">Top Selling</p>
                                    <h3 class="product-name"><a href="#">@item.Value("productName")</a></h3>
                                    <h4 class="product-price">@item.Value("price") <del class="product-old-price">$990.00</del></h4>
                                </div>
                                </a>
                            </div>
                        }
                    </div>
                    <!-- /aside Widget -->

					</div>
					<!-- /ASIDE -->

					<!-- STORE -->
					<div id="store" class="col-md-9">
						<!-- store top filter -->
						<div class="store-filter clearfix">
							<div class="store-sort">
								<label>
									Sort By:
									<select class="input-select">
										<option value="0">Price</option>
										
									</select>
								</label>

							
							</div>
							<ul class="store-grid">
								<li class="active"><i class="fa fa-th"></i></li>
								<li><a href="#"><i class="fa fa-th-list"></i></a></li>
							</ul>
						</div>
						<!-- /store top filter -->
						
						
						

					<!-- store products -->
<div class="row">
    	@{
                       var selection = Umbraco.ContentAtRoot().FirstOrDefault()
        .ChildrenOfType("product")
        .Where(x => x.IsVisible() && x.HasValue("productType") && x.Value<string>("productType").Equals("solarpanel", StringComparison.OrdinalIgnoreCase))
        .OrderByDescending(x => x.CreateDate);
                    }
    @foreach (var item in selection)
    {
        var thumbnail = item.Value<IPublishedContent>("thumbnailImage");
        <!-- product -->
        <div class="col-md-4 col-xs-6">
            <div class="product">
                <a href="@item.Url()">
                <div class="product-img">
                    <img src="@thumbnail.Url()" alt="">
                    <div class="product-label">
                        
                    </div>
                </div>
                <div class="product-body">
                    <p class="product-category">Category</p>
                    <h3 class="product-name"><a href="#">@item.Value("productName")</a></h3>
                    <h4 class="product-price">@item.Value("price") <del class="product-old-price">@item.Value("price")</del></h4>
                    <div class="product-rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <div class="product-btns">
                        <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                        <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
                        <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                    </div>
                </div>
               
                </a>
            </div>
        </div>
        <!-- /product -->
    }
</div>
<!-- /store products -->

					
					
					
						<!-- store bottom filter -->
						<div class="store-filter clearfix">
							<span class="store-qty">Showing 20-100 products</span>
							<ul class="store-pagination">
								<li class="active">1</li>
								<li><a href="#">2</a></li>
								<li><a href="#">3</a></li>
								<li><a href="#">4</a></li>
								<li><a href="#"><i class="fa fa-angle-right"></i></a></li>
							</ul>
						</div>
						<!-- /store bottom filter -->
					</div>
					<!-- /STORE -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->
